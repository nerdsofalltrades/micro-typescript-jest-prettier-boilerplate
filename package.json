{
  "name": "micro-typescript-jest-prettier-boilerplate",
  "description": "Micro + Typescript + Jest + Prettier Boilerplate",
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "NODE_ENV=production node ./dist",
    "dev": "tsc-watch -p tsconfig.json --onSuccess 'node ./dist' --onFailure 'echo ðŸ’© Compilation Failed'",
    "test": "NODE_ENV=test jest && tslint -p tsconfig.json -t stylish",
    "precommit": "npm test",
    "docker:build": "docker build -t microservice .",
    "docker:run": "docker run -p 7878:3000 microservice"
  },
  "keywords": [
    "node",
    "microservice",
    "micro",
    "typescript",
    "jest",
    "prettier",
    "docker"
  ],
  "dependencies": {
    "micro": "^9.3.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.7",
    "@types/micro": "^7.3.1",
    "@types/node": "^10.3.6",
    "husky": "^0.14.3",
    "jest": "^23.2.0",
    "prettier": "^1.13.6",
    "source-map": "^0.7.3",
    "ts-jest": "^22.4.6",
    "tsc-watch": "^1.0.22",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2"
  },
  "author": "Sebastian Misch - Nerds of all Trades GmbH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:nerdsofalltrades/micro-typescript-jest-prettier-boilerplate.git"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2
  },
  "tslint": {
    "enable": true,
    "autoFixOnSave": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "testRegex": ".*\\.spec.ts$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "automock": false,
    "collectCoverage": true
  }
}
